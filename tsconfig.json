{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "jsx": "react",
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@/app/*": ["app/*"],
      "@/app/assets/*": ["app/assets/*"],
      "@/app/components/*": ["app/(components)/*"],
      "@/app/constants/*": ["app/(constants)/*"],
      "@/app/hooks/*": ["app/(hooks)/*"],
      "@/app/lib/*": ["app/(lib)/*"],
      "@/app/tabs/*": ["app/(tabs)/*"],
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "nativewind-env.d.ts"
  ]
}